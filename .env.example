# ========================================
# PAYLOAD CMS - Environment Variables
# ========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit your .env.local file to version control

# ========================================
# üîê SECURITY (REQUIRED)
# ========================================
# Generate a strong random string for JWT encryption
# You can generate one with: openssl rand -base64 32
PAYLOAD_SECRET=your-super-secret-key-here-change-this

# ========================================
# üóÑÔ∏è DATABASE (REQUIRED)
# ========================================
# Vercel Postgres or Neon connection string
# Format: postgres://username:password@host:port/database?sslmode=require
# Get this from: Vercel Dashboard > Storage > Postgres > Connection String
# Or Neon: https://neon.tech
POSTGRES_URL=postgresql://user:password@host:5432/database?sslmode=require

# ========================================
# üì¶ STORAGE (REQUIRED)
# ========================================
# Vercel Blob Storage token for media uploads
# Get this from: Vercel Dashboard > Storage > Blob > Token
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxx

# ========================================
# üåê SERVER URLs (OPTIONAL)
# ========================================
# Public URL where your CMS is deployed
# Vercel sets VERCEL_URL automatically, but you can override it
PAYLOAD_PUBLIC_SERVER_URL=https://your-cms.vercel.app

# Frontend URL for CORS (your Astro portfolio)
FRONTEND_URL=https://your-portfolio.vercel.app

# ========================================
# üöÄ DEPLOYMENT
# ========================================
# Node environment (Vercel sets this automatically)
NODE_ENV=development
